[Unit]
Description=Algotcha Data Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/algotcha
Environment="PATH=/opt/algotcha/venv/bin"
Environment="ALGOTCHA_API_KEY=your-secret-key-change-this"
Environment="PORT=5000"
ExecStart=/opt/algotcha/venv/bin/gunicorn -w 2 -b 0.0.0.0:5000 data_server:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

